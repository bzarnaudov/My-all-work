package all;

import java.util.*;

public class Problem4MusicalCompany {
	private string name;
    private string address;
    private string owner;
    private HashSet<Singer> artists;

    // Create a constructor for the class
    public MusicComapny(string name, string address, string owner)
    {
        this.name = name;
        this.address = address;
        this.owner = owner;
        this.artists = new HashSet<Singer>();
    }

    // Method for adding new singers to the HashSet of artists
    public void AddArtist(Singer singer)
    {
        this.artists.Add(singer);
    }

    // Create an overriden method to make the the information in the class 
    // into string 
    public override string ToString()
    {
        StringBuilder sb = new StringBuilder();

        sb.Append("Company name " + this.name);
        sb.Append('\n');
        sb.Append("Company adrres " + this.address);
        sb.Append('\n');
        sb.Append("Owner " + this.owner);
        sb.Append('\n');

        foreach (var artist in artists)
        {
            sb.Append(artist.ToString());
            sb.Append('\n');
        }
        return sb.ToString();
    }
}
