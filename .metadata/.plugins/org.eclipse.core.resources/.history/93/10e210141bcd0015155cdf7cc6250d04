package pacman;

import javax.swing.JFrame;

public class GameInitilaization extends JFrame {

	/**
	 * 
	 */
	private static final long serialVersionUID = -8178336655433621024L;

	private final int blocksize = 24;
	
	public GameInitilaization() {
		initUI();
	}

	private void initUI() {
		Game game = new Game();
		add(game);
		setTitle("Pacman by Arnaudov");
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		int screenWidth = Game.level.getRows() * blocksize + 15;
		int screenHeight = Game.level.getColumns() * blocksize + 60;
		setSize(screenWidth, screenHeight);
		setLocationRelativeTo(null);
		setVisible(true);
	}
}
