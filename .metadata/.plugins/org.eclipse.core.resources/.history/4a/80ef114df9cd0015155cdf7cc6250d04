	private static final long serialVersionUID = -5566108725243282994L;

	public final int BLOCK_SIZE = 24;

	private static String levelFileName = "level0.csv";
	public static Level level = new Level(levelFileName);
	private static PacDot pacDot = new PacDot();
	private static PowerDot powerDot = new PowerDot();

	public Game() {

		// loadImages();
