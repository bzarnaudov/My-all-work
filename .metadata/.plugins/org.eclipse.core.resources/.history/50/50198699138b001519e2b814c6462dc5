package all;

public class Problem5Estate {
	public double Area;
    public double PricePerSquareMeter;
    public string Location;

    // Crate a public constructor of the class
    public Estate(double area, double pricePerSquareMeter, string location)
    {
        this.Area = area;
        this.PricePerSquareMeter = pricePerSquareMeter;
        this.Location = location;
    }

    // Default constuctor
    public Estate()
    {
    }

    //Create an overriden method to represent the information from the class 
    // into a string
    public override string ToString()
    {
        string result = "Area " + this.Area + '\n' + "Price per square meter " + 
            this.PricePerSquareMeter + '\n' + "Location " + this.Location;
        return result;
    }

}
