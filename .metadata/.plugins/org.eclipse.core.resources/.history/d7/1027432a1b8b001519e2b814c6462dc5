package all;

public class Problem5Employee {
    readonly string name;
    readonly string duty;
    readonly double experience;

    // Crate a public constructor of the class
    public Employee(string name, string duty, double experience)
    {
        this.name = name;
        this.duty = duty;
        this.experience = experience;
    }

    //Create an overriden method to represent the information from the class 
    // into a string
    public override string ToString()
    {
        return "Name of employee " + this.name + '\n' + "Duty " +
               this.duty + '\n' + "Experience " + this.experience;
    }

}
