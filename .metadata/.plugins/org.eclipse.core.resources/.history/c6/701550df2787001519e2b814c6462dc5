package all;

import java.io.File;
import java.util.Scanner;

public class Problem2Main {
	
	public static void main(String[] args) {
		Scanner reader = new Scanner(new File("/Tests1/test.001.in.txt"), "windows-1251");
	    int n = Integer.parseInt(reader.nextLine());
	    Problem2LabirintAllPaths labirint = new Problem2LabirintAllPaths(n);

	    for (int i = 0; i < n; i++) {
	        String line = reader.nextLine();
	        for (int j = 0; j < n; j++) {
	        	labirint.setMatrixElement(i, j, line.charAt(j));
	            if (line.charAt(j) == '*') {
	                labirint.setStartCell(new Problem2Cell(i, j));
	            }
	        }
	    }
	    reader.close();

	    labirint.findingAllPaths();
	    int numberOfExits = findExits();

	    StreamWriter writer = new StreamWriter(
	        "../../Files/test.001.out.txt");
	    using (writer)
	    {
	        writer.WriteLine(numberOfExits);
	    }
	}
}
