package all;

import java.applet.*;
import java.util.*;

public class Test extends Applet implements Runnable {
	public void init() {
		Thread t = new Thread(this);
		t.start();
		try {
			t.sleep(1000);
		} catch (InterruptedException e) {
			
		}
	}

	public void run() {
		for (;;) {
			// display time every second
			System.out.println(new Date().toString());
		}
	}
}