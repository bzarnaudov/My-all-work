package stacksAndQueues;

public class Problem3ArrayBasedStack {
	private int count;
    private Object[] elements;
    private final int INITIALCAPACITY = 16;

    public Problem3ArrayBasedStack() {
        elements = new Object[INITIALCAPACITY];
        this.count = 0;
    }
    
    public Problem3ArrayBasedStack(int capacity) {
    	if (capacity <= 0) {
    		throw new IllegalArgumentException("Stack's capacity must be positive");
    	}
        this.elements = new Object[capacity];
        this.count = 0;
    }

    public int capacity() {
    	return this.elements.length;
    }
    
    public int count() {
    	return this.count;
    }

    void push(Object element) {
        if (this.count == this.elements.length) {
        	grow();
        }
        this.count++;
        this.elements[count-1] = element;
    }

    private void grow() {
		Object[] newElements = new Object[this.elements.length*2];
		System.arraycopy(this.elements, 0, newElements, 0, this.count);
		this.elements = newElements;
	}
    
	public Object pop() {
        if (this.count == 0) {
              throw new StackException("Stack is empty");
        }
        this.count--;
        return this.elements[count];
    }
    
	public Object[] toArray() {
		Object[] allElements = new Object[this.count];
		System.arraycopy(this.elements, 0, allElements, 0, this.count);
		return allElements;
	}

    public class StackException extends RuntimeException {
		private static final long serialVersionUID = 1L;
		public StackException(String message) {
			super(message);
        }
    }
}
