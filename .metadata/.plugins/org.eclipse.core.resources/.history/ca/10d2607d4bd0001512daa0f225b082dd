package pacman;

import java.awt.Color;
import java.awt.Font;

public abstract class Drawable {
	protected Color color;
	protected Font font;
	
	public Drawable() {
		color = new Color(196, 128, 255);
		font = new Font("Ariel", Font.BOLD, 16);
	}

	public Color getColor() {
		return color;
	}
	
	public Font getFont() {
		return font;
	}
}
