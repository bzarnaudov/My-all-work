package all;

public class PrintNum implements Runnable {

	private int lastNum;

	/** Construct a task for printing 1, 2, ... i */
	public PrintNum(int n) {
		lastNum = n;
	}

	@Override
	/** Tell the thread how to run */
	public void run() {
		System.out.print(1);
		for (int i = 2; i <= lastNum; i++) {
			System.out.print(" " + i);
		}
	}
}
