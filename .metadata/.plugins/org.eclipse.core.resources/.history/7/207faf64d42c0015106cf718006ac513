package all;

import java.util.NoSuchElementException;

@SuppressWarnings({"unchecked"})

public class CircularQueue<T> {
	private T[] elements;
	private int startIndex = 0;
    private int endIndex = 0;
    private int count;

    private final int INITIALCAPACITY = 16;
    
    public static void main(String[] args) {
    	CircularQueue<Integer> queue = new CircularQueue<Integer>();

        queue.enqueue(1);
        queue.enqueue(2);
        queue.enqueue(3);
        queue.enqueue(4);
        queue.enqueue(5);
        queue.enqueue(6);

        System.out.printf("Count = {0}", queue.count);
        System.out.printf(", " + queue.toArray());
        System.out.printf("---------------------------");

        int first = queue.dequeue();
        System.out.printf("First = {0}", first);
        System.out.printf("Count = {0}", queue.count);
        System.out.printf(", " + queue.toArray());
        System.out.printf("---------------------------");

        queue.enqueue(-7);
        queue.enqueue(-8);
        queue.enqueue(-9);
        System.out.printf("Count = {0}", queue.count);
        System.out.printf(", " + queue.toArray());
        System.out.printf("---------------------------");

        first = queue.dequeue();
        System.out.printf("First = {0}", first);
        System.out.printf("Count = {0}", queue.Count);
        System.out.printf(string.Join(", ", queue.ToArray()));
        System.out.printf("---------------------------");

        queue.Enqueue(-10);
        System.out.printf("Count = {0}", queue.Count);
        System.out.printf(string.Join(", ", queue.ToArray()));
        System.out.printf("---------------------------");

        first = queue.dequeue();
        System.out.printf("First = {0}", first);
        System.out.printf("Count = {0}", queue.Count);
        System.out.printf(string.Join(", ", queue.ToArray()));
        System.out.printf("---------------------------");
	}
    
    public int count() {
    	return this.count;
    }
	
    public CircularQueue() {
    	this.elements = (T[]) new Object[INITIALCAPACITY];
        this.count = 0;
    }
    
    public CircularQueue(int capacity) {
    	this.elements = (T[]) new Object[capacity];
        this.count = 0;
    }
    
    public void enqueue(T element) {
    	if (this.count >= this.elements.length) {
            this.Grow();
        }
        this.elements[this.endIndex] = element;
        this.endIndex = (this.endIndex + 1) % this.elements.length;
        this.count++;
    }

	private void Grow() {
		T[] newElements = (T[]) new Object[2 * this.elements.length];
		this.copyAllElementsTo(newElements);
        this.elements = newElements;
        this.startIndex = 0;
        this.endIndex = this.count;
		
	}

	private void copyAllElementsTo(T[] resultArr) {
		 int sourceIndex = this.startIndex;
	     int destinationIndex = 0;
	     for (int i = 0; i < this.count; i++) {
	        resultArr[destinationIndex] = this.elements[sourceIndex];
	        sourceIndex = (sourceIndex + 1) % this.elements.length;
	        destinationIndex++;
	     }
	}
	
	public T dequeue() {
        if (this.count == 0)
        {
            throw new NoSuchElementException("The queue is empty!");
        }
        T result = this.elements[startIndex];
        this.startIndex = (this.startIndex + 1) % this.elements.length;
        this.count--;
        return result;
    }
	
	public T[] toArray()
    {
        T[] arr = (T[]) new Object[this.count];
        this.copyAllElementsTo(arr);
        return arr;
    }
}
